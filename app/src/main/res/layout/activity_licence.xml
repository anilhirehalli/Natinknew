<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".licence">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_below="@+id/agrement"

        android:src="@drawable/world_natink" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/engin"
        android:id="@+id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Nat ink"

        android:layout_centerHorizontal="true"
        android:textColorHighlight="@android:color/white"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp"

        android:id="@+id/agrement"/>
    <Button
        android:layout_alignParentBottom="true"

        android:layout_width="230dp"
        android:layout_gravity="bottom"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="Agree and contiune"
        android:id="@+id/agreed"
        android:background="@android:color/holo_green_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/licice"
        android:textSize="30dp"
        android:text="Terms and conditions"
        android:clickable="true"
        android:textColor="@color/html_link"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/agreed"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="480dp"/>
</RelativeLayout>